{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "baseUrl": "./app",
    "paths": {
     "@config/*":["config/*"],
     "@components/*":["components/*"],
     "@services/*":["services/*"],
     "@navigation/*":["navigation/*"],
     "@navigation":["navigation"],
     "@models/*":["models/*"],
     "@theme/*":["theme/*"],
     "@screens/*":["screens/*"],
     "@utils/*":["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
